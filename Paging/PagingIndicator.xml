<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Frame name="PagingIndicatorFrame" parent="MainMenuBarArtFrame" frameLevel="3" hidden="true">
        <Anchors>
            <Anchor point="BOTTOM" relativePoint="BOTTOM">
                <Offset x="30" />
            </Anchor>
        </Anchors>
        
        <Size>
            <AbsDimension x="32" y="42" />
        </Size>
        
        <Layers>
            <Layer level="OVERLAY">
                <Texture file="Interface\AddOns\Paging\PagingIndicatorBackdrop.tga">
                    <Size>
                        <AbsDimension x="32" y="42" />
                    </Size>
                    
                    <Anchors>
                        <Anchor point="CENTER">
                            <Offset x="0" y="0" />
                        </Anchor>
                    </Anchors>
                    
                    
                    <TexCoords left="0" right="1" top="0.34375" bottom="1" />
                </Texture>
            </Layer>
        </Layers>
        
        <Scripts>
            <OnLoad>
                self.lightColor = {MainMenuBarPageNumber:GetTextColor()};
                self.darkColor = {MainMenuBarPageNumber:GetShadowColor()};
            </OnLoad>
            <OnShow>
                MainMenuBarPageNumber:SetTextColor(unpack(self.darkColor));
                MainMenuBarPageNumber:SetShadowColor(unpack(self.lightColor));
            </OnShow>
            <OnHide>
                MainMenuBarPageNumber:SetTextColor(unpack(self.lightColor));
                MainMenuBarPageNumber:SetShadowColor(unpack(self.darkColor));
            </OnHide>
        </Scripts>
    </Frame>
</Ui>
